<div class="article-container">
<p class="article-title">
	<%= @article.title %>
</p>

<p class="article-text">
	<%= sanitize(@text) %>
</p>

<hr>

<h2>Comments</h2>
<%= render @article.comments %>

<h2>Add a comment:</h2>
<%= render 'comments/form' %>

<%= link_to 'Edit', edit_article_path(@article) %> |
<%= link_to 'Back', articles_path %>
</div>
