<p>
	<strong>Commenter:</strong>
	<%= comment.user.username %>
</p>

<p>
	<strong>Comment:</strong>
	<%= comment.body %>
</p>

<% if policy(comment).destroy? %>
	<p>
	<%= link_to 'Destroy Comment', [comment.article, comment],
	method: :delete,
	data: { confirm: 'Are you sure?' } %>
	</p>
<% end %>

