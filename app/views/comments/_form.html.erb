<%= form_for([@article, @article.comments.build]) do |f| %>
	<p>
		<%= f.text_area :body, class: 'form-control' %>
	</p>
	<p>
		<% if @article.persisted? %>
			<%= f.submit "Save Changes", class: 'btn btn-primary' %>
		<% else %>
			<%= f.submit "Post Comment", class: 'btn btn-primary' %>
		<% end %>
	</p>
<% end %>
